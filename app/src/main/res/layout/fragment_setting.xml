<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/coorLayoutSetting">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/lnContentSetting"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/pad_edittext_login"
                    android:background="@drawable/bg_content_login"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEdUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edUrl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|left"
                            android:focusableInTouchMode="true"
                            android:focusable="true"
                            android:hint="www.xxx.com"
                            android:inputType="none"
                            android:imeOptions="actionNext"
                            android:nextFocusRight="@+id/tilEdPhoneNumber1"
                            android:padding="@dimen/pad_edittext_login"
                            android:singleLine="true"
                            android:textColor="@color/color_txt_wifi"
                            android:textSize="@dimen/text_size_editext_login"

                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilEdPhoneNumber1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edPhoneNumber1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:hint="เบอร์โทร SIM1"
                                android:inputType="phone"
                                android:padding="@dimen/pad_edittext_login"

                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:nextFocusRight="@+id/tilEdPhoneNumber2"
                                android:textColor="@color/color_txt_wifi"
                                android:textSize="@dimen/text_size_editext_login"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:id="@+id/tvSimAuto1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:paddingLeft="@dimen/pad_edittext_login"
                            android:paddingRight="@dimen/pad_edittext_login"
                            android:paddingTop="@dimen/pad_title_menu_bottom"
                            android:paddingBottom="@dimen/pad_title_menu_bottom"
                            android:visibility="invisible"
                            android:background="@drawable/bg_auto_sim"
                            android:textColor="#82EE13"
                            android:text="อัตโนมัติ"
                            android:textSize="@dimen/pad_text_tb_sms"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilEdPhoneNumber2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edPhoneNumber2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center|left"
                                android:hint="เบอร์โทร SIM2"
