                            android:paddingBottom="@dimen/pad_title_menu_bottom"
                            android:textColor="#82EE13"
                            android:background="@drawable/bg_auto_sim"
                            android:text="อัตโนมัติ"
                            android:textSize="@dimen/pad_text_tb_sms"/>
                    </RelativeLayout>

                    <LinearLayout
