<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coorLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad_edittext_login"
            android:background="?attr/colorPrimary">
            <TextView
                android:id="@+id/tvTitleToolBar"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:gravity="center"
                android:maxLines="1"
                android:padding="@dimen/pad_title_menu_bottom"
                android:freezesText="true"
                android:textColor="@color/color_title_menu_bottom_s"
                android:textSize="@dimen/size_title_page"
                android:textStyle="bold" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlFrameContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:background="#ffffff">
            <!--<FrameLayout
                android:id="@+id/framContentSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"></FrameLayout>

            <FrameLayout
                android:id="@+id/framContentSms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"></FrameLayout>

            <FrameLayout
                android:id="@+id/framContentCall"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"></FrameLayout>-->
            <FrameLayout
                android:id="@+id/framContentHome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"></FrameLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary">
            <LinearLayout
                android:id="@+id/lnMenuSms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/pad_tb_menu_bottom">
                <ImageView
                    android:id="@+id/imgMenuSms"
                    android:layout_width="@dimen/size_ic_menu_bottom"
                    android:layout_height="@dimen/size_ic_menu_bottom"
                    android:layout_marginTop="@dimen/pad_title_menu_bottom"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_sms"
                    android:tint="@color/color_title_menu_bottom_u" />
                <TextView
                    android:id="@+id/tvMenuSms"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/pad_title_menu_bottom"
                    android:text="@string/title_menu_sms"
                    android:textColor="@color/color_title_menu_bottom_u"
                    android:textSize="@dimen/size_title_menu_bottom"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnMenuSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/pad_tb_menu_bottom">
                <ImageView
                    android:id="@+id/imgMenuSetting"
                    android:layout_width="@dimen/size_ic_menu_bottom"
                    android:layout_height="@dimen/size_ic_menu_bottom"
                    android:layout_marginTop="@dimen/pad_title_menu_bottom"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_settings"
                    android:tint="@color/color_title_menu_bottom_u" />
                <TextView
                    android:id="@+id/tvMenuSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="1"
                    android:padding="@dimen/pad_title_menu_bottom"
                    android:text="@string/title_menu_setting"
                    android:textColor="@color/color_title_menu_bottom_u"
                    android:textSize="@dimen/size_title_menu_bottom"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

